<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categoriesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="224dp">

        <ImageView
            android:id="@+id/headerImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bcg_categories"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/StyleTitle24VioletColor"
            android:id="@+id/tvCategoryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_main"
            android:layout_marginBottom="@dimen/space_main"
            android:background="@drawable/shape_drawable"
            android:text="@string/title_category"
            app:layout_constraintBottom_toBottomOf="@+id/headerImageView"
            app:layout_constraintStart_toStartOf="@+id/headerImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/space_main_half"
        android:layout_marginVertical="@dimen/space_main_half"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="6"
        tools:listitem="@layout/item_category">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>