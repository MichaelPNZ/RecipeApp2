<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius_10dp</item>
    </style>

    <style name="StyleTitle14VioletColor" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/violet</item>
    </style>

    <style name="StyleTitle20VioletColor" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="StyleTitle20VioletColorHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/violet</item>
    </style>

    <style name="StyleTitle12GrayColor" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="StyleTitle14GrayColorCAPS" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleTitle14GrayColor" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="StyleTitle16GrayColor" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="StyleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

    <style name="StyleHeartButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>